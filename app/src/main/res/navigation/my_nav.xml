<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainPageFragment2">

    <fragment
        android:id="@+id/accountFragment"
        android:name="com.example.kurslinemobileapp.UI.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" >
        <action
            android:id="@+id/action_accountFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_accountFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_accountFragment_to_businessRegister"
            app:destination="@id/businessRegister" />
        <action
            android:id="@+id/action_accountFragment_to_mainPageFragment2"
            app:destination="@id/mainPageFragment2" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.kurslinemobileapp.UI.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.kurslinemobileapp.UI.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainRegister"
            app:destination="@id/mainRegister" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.example.kurslinemobileapp.UI.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" >
        <action
            android:id="@+id/action_favoritesFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/businessRegister"
        android:name="com.example.kurslinemobileapp.UI.BusinessRegister"
        android:label="fragment_business_register"
        tools:layout="@layout/fragment_business_register" />
    <fragment
        android:id="@+id/mainRegister"
        android:name="com.example.kurslinemobileapp.UI.MainRegister"
        android:label="fragment_main_register"
        tools:layout="@layout/fragment_main_register" >
        <action
            android:id="@+id/action_mainRegister_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_mainRegister_to_businessRegister"
            app:destination="@id/businessRegister" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.kurslinemobileapp.UI.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainPageFragment2"
        android:name="com.example.kurslinemobileapp.UI.MainPageFragment2"
        android:label="fragment_main_page2"
        tools:layout="@layout/fragment_main_page2" />
</navigation>