<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.MainPageFragment"
    android:id="@+id/parentRelative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainPageBackgroundColor">
    <LinearLayout
        android:id="@+id/linearforLogo"
        android:layout_width="427dp"
        android:layout_height="83dp"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/pageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seçilmişlər"
            android:textSize="32sp"
            android:fontFamily="@font/nunito"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_below="@+id/linearforLogo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        >
        <RelativeLayout
            android:id="@+id/linearforHighlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recylerViewforHighlight"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />


        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
