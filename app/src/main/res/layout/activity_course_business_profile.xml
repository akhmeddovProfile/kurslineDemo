<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.courseFmAc.CourseUploadActivity">



    <ImageView
        android:id="@+id/backToCourseDesc"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/cProfileLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:gravity="center_horizontal"
        android:text="Logo"
        android:layout_marginTop="30dp"
        android:textColor="@color/greenColor"
        android:textSize="36dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/lineCProfile"
        android:layout_width="match_parent"
        android:layout_below="@id/cProfileLogo"
        android:layout_height="1dp"
        android:src="@color/grayColor1"/>

    <ScrollView
        android:layout_below="@+id/lineCProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainPageBackgroundColor">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:id="@+id/courseBusinessPhoto"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/setpp" />
            <TextView
                android:id="@+id/businessCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:text="AimTech"
                android:textSize="26sp"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/courseBusinessPhoto"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/businessCategoryText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/nunito"
                android:text="Web development"
                android:textSize="16sp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_toRightOf="@+id/courseBusinessPhoto"
                android:layout_below="@+id/businessCompanyName"
              />

        </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>