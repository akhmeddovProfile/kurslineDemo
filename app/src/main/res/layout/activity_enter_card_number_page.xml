<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayColor3"
    android:id="@+id/courseUploadRl"
    tools:context=".view.payment.EnterCardNumberPage">

    <ImageView
        android:id="@+id/backtoMainFromCourseUpload"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/uploadCoureText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito"
        android:gravity="center_horizontal"
        android:text="Ödəniş"
        android:layout_marginTop="30dp"
        android:textColor="@color/greenColor"
        android:textSize="36dp"
        android:textStyle="bold" />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/lineForCourseUpload"
        android:layout_width="match_parent"
        android:layout_below="@id/uploadCoureText"
        android:layout_height="1dp"
        android:src="@color/grayColor1"/>

    <ScrollView
        android:layout_below="@+id/lineForCourseUpload"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_marginTop="11dp"
                android:id="@+id/sumPriceRl">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Ödəniləcək məbləğ"
                    android:textColor="@color/black"
                    android:fontFamily="@font/nunito"
                    android:textSize="16sp"
                    android:layout_marginStart="0dp"/>
                <TextView
                    android:id="@+id/priceSum"
                    android:layout_marginStart="280dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="240,00 AZN"
                    android:textSize="18sp"
                    android:textColor="@color/greenColor"
                    android:fontFamily="@font/nunito"
                    android:textStyle="bold"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="22dp"
                android:layout_below="@+id/sumPriceRl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cardnumberContainer"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/grayColor1"
                    app:hintTextColor="@color/grayColor1"
                    android:textColorHint="@color/grayColor1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cardnumberEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:drawableEnd="@drawable/credit_card"
                        android:fontFamily="@font/montserrat"
                        android:hint="@string/card_number"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/cardlastusingTimeContainer"
                    android:layout_marginTop="100dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/grayColor1"
                    app:hintTextColor="@color/grayColor1"
                    android:textColorHint="@color/grayColor1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/cardlastusingEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:inputType="number"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat"
                        android:hint="00/00"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/enterCVVContainer"
                    android:layout_marginTop="100dp"
                    android:layout_marginStart="150dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_marginHorizontal="20dp"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/grayColor1"
                    app:hintTextColor="@color/grayColor1"
                    android:textColorHint="@color/grayColor1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enterCVVEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lines="1"
                        android:inputType="numberPassword"
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat"
                        android:hint="* * *"
                        android:drawableEnd="@drawable/credit_card"
                        android:maxLines="1"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/pay"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/button_bg"
                    android:text="Ödə"
                    android:textAllCaps="false"
                    android:layout_marginTop="200dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"/>

            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>