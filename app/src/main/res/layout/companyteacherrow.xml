<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:translationZ="10dp"
        android:elevation="10dp"
        app:cardCornerRadius="20dp">
      <RelativeLayout
          android:background="@color/white"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:id="@+id/companyTeacherTabImage"
              android:layout_width="70dp"
              android:layout_height="70dp"
              android:background="@drawable/setpp"
              android:layout_alignParentStart="true"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"/>
          <TextView
              android:id="@+id/companyTeacherCname"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="AimTech"
              android:fontFamily="@font/nunito"
              android:textColor="@color/black"
              android:textStyle="bold"
              android:textSize="24sp"
              android:layout_toEndOf="@+id/companyTeacherTabImage"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"/>
          <TextView
              android:layout_below="@+id/companyTeacherCname"
              android:id="@+id/companyTeacherCategory"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Web development"
              android:fontFamily="@font/nunito"
              android:textColor="@color/black"
              android:textSize="16sp"
              android:layout_toEndOf="@+id/companyTeacherTabImage"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="10dp"/>

          <ImageView
              android:id="@+id/phoneCompanyTeacher"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentEnd="true"
              android:layout_marginStart="20dp"
              android:layout_marginTop="20dp"
              android:layout_marginEnd="20dp"
              android:layout_marginBottom="20dp"
              android:background="@drawable/ic_baseline_phone_24" />
      </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>