<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".view.tabsForCompanies.TabforTeachers">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewRepititior"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27px"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="27px"
        android:background="@drawable/searchviewbg"
        android:queryBackground="@android:color/transparent"
        android:visibility="visible"
        app:defaultQueryHint="Kurs axtar"
        app:iconifiedByDefault="false" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewRepititior"
        android:layout_marginTop="20dp"
        android:id="@+id/recyclerViewForTeacher"/>
</RelativeLayout>