<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.tabsForCompanies.TabforCompanies">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchViewKurs"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="27px"
        android:elevation="8dp"
        android:translationZ="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="27px"
        android:background="@drawable/searchviewbg"
        android:queryBackground="@android:color/transparent"
        android:visibility="visible"
        app:defaultQueryHint="Kurs axtar"
        app:iconifiedByDefault="false" />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchViewKurs"
        android:layout_marginTop="20dp"
        android:id="@+id/recyclerviewForCompanyteacher"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingTabCompany"
        android:layout_below="@+id/searchViewKurs"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_rawRes="@raw/loading"
        app:lottie_autoPlay="true"
        app:lottie_loop="true" />
</RelativeLayout>