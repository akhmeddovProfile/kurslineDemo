<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/productview"
    android:translationZ="0dp"
    android:layout_margin="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:id="@+id/relativeForCourseMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/status_view"
        >
        <TextView
            android:id="@+id/modeforproduct"
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:textSize="10sp"
            android:text="Offline"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="3dp"
            android:textColor="@color/colorForCourseIntheMainScreen"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeForproductStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_bg"
        >
        <TextView
            android:id="@+id/statusforproduct"
            android:layout_width="44dp"
            android:layout_height="14dp"
            android:textSize="10sp"
            android:text="Repititor"
            android:gravity="center"
            android:fontFamily="@font/nunito"
            android:layout_marginStart="3dp"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/vip_product"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:background="@drawable/vip_icon"
        android:layout_marginStart="168dp"
        android:layout_marginTop="12dp"
        android:visibility="visible"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="14dp"
        >
        <ImageView
            android:id="@+id/productImage"
            android:layout_width="168dp"
            android:layout_height="135dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic[5]" />
        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/favorite_border_for_product"
            android:background="@android:color/transparent"
            android:layout_marginStart="130dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/productTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardView"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nunito"
        android:maxLines="1"
        android:text="Mobile Proqramlaşdırma Kursu"
        android:textColor="@color/greenColor"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:id="@+id/productOwnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorForCourseIntheMainScreen"
        android:layout_below="@+id/productTitle"
        android:fontFamily="@font/nunito"
        android:text="AimTech"
        android:textSize="10sp" />

    <TextView
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:id="@+id/productDescriptionIntheMainScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black"
        android:layout_below="@+id/productTitle"
        android:fontFamily="@font/nunito"
        android:text="This textView using for about the course ..."
        android:textSize="11sp" />

</RelativeLayout>

